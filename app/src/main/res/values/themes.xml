<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========================= -->
    <!-- THEME PRINCIPAL DE LA APP -->
    <!-- ========================= -->
    <style name="Theme.CustomerRewardPrograms" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">#FBF8F5</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#FBF8F5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- ========================= -->
    <!-- SPLASH LEGACY (< API 31) -->
    <!-- ========================= -->
    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF0000</item> <!-- prueba -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.CustomerRewardPrograms</item>
        <item name="android:windowSplashScreenBrandingImage"></item>
    </style>

</resources>
