<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CustomerRewardPrograms" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">#FBF8F5</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#FBF8F5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Tema del Splash Screen -->
    <style name="Theme.App.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Gradiente con logo -->
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- Sin decoraciones -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Status bar transparente -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>