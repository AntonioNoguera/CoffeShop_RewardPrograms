<resources>
    <style name="Theme.CustomerRewardPrograms" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">#3E2723</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">#3E2723</item>

        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--    Listado de implementaciones disponibles del splash-->
    <!--    1.- Color Sólido-->
    <style name="Theme.App.Splash.Plain.Color" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#BC5C00</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.CustomerRewardPrograms</item>
    </style>

    <!--    2.- Gradiente y Icono desde XML (esta implementación solo funciona en Android < 12) -->
    <style name="Theme.App.Splash.Gradient.Color" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
<!--    <item name="android:windowBackground">@drawable/splash_custom_icon</item> Para el custom icon-->

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--    3.- Animación -->

    <!--    5.- Con branding -->

</resources>